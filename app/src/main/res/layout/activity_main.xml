<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="jwwu.com.dotabuddy.activities.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="120:53"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:id="@+id/button"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true" />

    <GridView
        tools:listitem="@layout/timer_chooser_single_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_gridView"
        android:numColumns="4"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:columnWidth="100dp"
        android:layout_below="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lexikon"
        android:id="@+id/button4"
        android:layout_marginBottom="94dp"
        android:layout_alignBottom="@+id/main_gridView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a Hero"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/main_gridView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
